{
  "id": "node",
  "name": "Node Plugin",
  "version": "1.0.0",
  "description": "P2P networking and distributed communication plugin for Blackhole",
  "category": "networking",
  "author": {
    "name": "Blackhole Foundation",
    "url": "https://github.com/blackhole-foundation"
  },
  "license": "MIT",
  "source": {
    "type": "monorepo",
    "path": "core/pkg/plugins/node"
  },
  "repository": "https://github.com/blackhole-foundation/blackhole",
  "documentation": "https://github.com/blackhole-foundation/blackhole/tree/main/core/pkg/plugins/node/docs",
  "keywords": ["p2p", "networking", "libp2p", "distributed", "mesh"],
  "requirements": {
    "blackhole": ">=1.0.0",
    "mesh": ">=1.0.0"
  },
  "capabilities": [
    "network",
    "filesystem:read",
    "filesystem:write",
    "mesh:publish",
    "mesh:subscribe"
  ],
  "resources": {
    "memory": "256M-1G",
    "cpu": "0.2-2.0",
    "disk": "500M"
  }
}